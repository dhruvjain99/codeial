        
        <link rel="stylesheet" type="text/css" href="/css/home.css">
        <h1>Codeial/<%= title %></h1>
        <% if (locals.user){ %>
                <section id="feed-posts">
                        <h4>Posts</h4>
                        <form action="/post/create" method="POST" id="new-post-form">
                                <textarea name="content" id="post-text-area" placeholder="What's on your mind?" cols="30" rows="5"></textarea>
                                <input type="submit" value="Post">
                        </form>
                </section>
        <% } %>
        
        <section id="posts-list-container">
                <ul>
                        <% for(var post of locals.posts){ %>
                                <li>
                                        <p>Name : <%= post.user.name %></p>
                                        <p>Content : <%= post.content %></p>
                                </li>
                        <% } %>

                </ul>
        </section>